{
  "name": "bim-platform",
  "version": "1.0.0",
  "description": "bim platform",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo build",
    "build:analyze": "turbo build:analyze",
    "check": "pnpm run check:circular && pnpm run check:dep && pnpm run check:type && pnpm check:cspell",
    "check:circular": "vsh check-circular",
    "check:cspell": "cspell lint **/*.ts **/README.md .changeset/*.md --no-progress",
    "check:dep": "vsh check-dep",
    "check:type": "turbo run typecheck",
    "clean": "vsh clean",
    "commit": "czg",
    "dev": "turbo-run dev",
    "format": "vsh lint --format",
    "lint": "vsh lint",
    "postinstall": "turbo run stub",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || simple-git-hooks",
    "reinstall": "pnpm clean --del-lock && pnpm bootstrap",
    "test:unit": "vitest",
    "update:deps": "pnpm update --latest --recursive"
  },
  "devDependencies": {
    "@bim/commitlint-config": "workspace:*",
    "@bim/eslint-config": "workspace:*",
    "@bim/prettier-config": "workspace:*",
    "@bim/stylelint-config": "workspace:*",
    "@bim/tailwind-config": "workspace:*",
    "@bim/tsconfig": "workspace:*",
    "@bim/turbo-run": "workspace:*",
    "@bim/vite-config": "workspace:*",
    "@bim/vsh": "workspace:*",
    "@ls-lint/ls-lint": "^2.2.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.1.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cspell": "^8.13.1",
    "is-ci": "^3.0.1",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.8",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.7",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "vite": "^5.3.5",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.7.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "overrides": {
      "@ctrl/tinycolor": "^4.1.0",
      "clsx": "^2.1.1",
      "vue": "^3.4.36"
    },
    "neverBuiltDependencies": [
      "canvas",
      "node-gyp",
      "playwright"
    ]
  }
}
